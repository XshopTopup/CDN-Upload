<!-- views/index.ejs -->
<!doctype html>
<html lang="id">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Arsyilla URL Uploader</title>
  <link rel="stylesheet" href="/static/style.css" />
</head>
<body>
<header class="site-header">
  <div class="container">
    <div class="brand">Arsyilla URL</div>
    <nav><a href="/docs">Dokumentasi</a></nav>
  </div>
</header>

<main class="container">
  <section class="card">
    <h1>Upload ke GitHub</h1>
    <p>Base: <code><%= BASE_URL %></code></p>
    <form action="/upload" method="post" enctype="multipart/form-data" class="upload-form">
      <input type="file" name="file" required />
      <button type="submit">Upload</button>
    </form>
    <p class="muted">Maksimal 100 MB. Hasil akan berupa slug dan RAW URL.</p>
  </section>
</main>

<footer class="site-footer">
  <div class="container">Â© <%= new Date().getFullYear() %> Arsyilla</div>
</footer>
</body>
</html>
